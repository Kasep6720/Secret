window1:Toggle("Auto Chi",false, function(bool)
    auchi = bool
end)
game:GetService('RunService').Stepped:connect(function()
    if auchi then
        pcall(function()
local args = {[1] = "addstat",[2] = "chakra",[3] = 18}
game:GetService("Players").LocalPlayer.startevent:FireServer(unpack(args))
wait(.25)
        end)
    end
end)
window1:Toggle("Auto Nin",false, function(bool)
    aunin = bool
end)
game:GetService('RunService').Stepped:connect(function()
    if aunin then
        pcall(function()
local args = {[1] = "addstat",[2] = "ninjutsu",[3] = 18}
game:GetService("Players").LocalPlayer.startevent:FireServer(unpack(args))
wait(.25)
        end)
    end
end)
window1:Toggle("Auto Tai",false, function(bool)
    autai = bool
end)
game:GetService('RunService').Stepped:connect(function()
    if autai then
        pcall(function()
local args = {[1] = "addstat",[2] = "taijutsu",[3] = 18}
game:GetService("Players").LocalPlayer.startevent:FireServer(unpack(args))
wait(.25)
        end)
    end
end)
window1:Toggle("Auto Health",false, function(bool)
    auhp = bool
end)
